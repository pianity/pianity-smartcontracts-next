{
    "name": "root",
    "private": true,
    "workspaces": [
        "erc1155",
        "fee",
        "tests"
    ],
    "scripts": {
        "build": "yarn build-contracts && yarn gen-bindings",
        "build-contracts": "yarn workspaces foreach --exclude root -vitp run build",
        "gen-bindings": "yarn workspaces foreach --exclude root -vitp run gen-bindings",
        "test": "yarn workspace tests run test",
        "postinstall": "husky install && cp ./node_modules/koumu/build/commit-msg .husky/commit-msg && chmod +x .husky/commit-msg",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable"
    },
    "dependencies": {
        "@pianity/eslint-config": "0.0.2",
        "@pianity/prettier-config": "0.0.1",
        "@types/node": "17.0.45",
        "commander": "9.4.0",
        "eslint": "8.22.0",
        "prettier": "2.7.1",
        "ts-jest": "^27.1.3",
        "ts-node": "10.9.1",
        "typescript": "4.7.4"
    },
    "packageManager": "yarn@3.2.0",
    "resolutions": {
        "warp-contracts": "portal:/home/noom/dev/pianity/warp-fork"
    },
    "devDependencies": {
        "husky": "8.0.1",
        "koumu": "0.0.15"
    }
